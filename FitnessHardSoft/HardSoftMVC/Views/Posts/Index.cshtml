@model HardSoftMVC.Models.BlogWholeInfo
@using PagedList.Mvc;
@using HardSoftMVC.Models.Extensions;

@{
    ViewBag.Title = "Index";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Document</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/blog.css")
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <aside class="sideBar">
        <header>
            <span class="glyphicon glyphicon-remove navbartogg"></span>
        </header>
        <aside class="main">
            <div class="time">
                <div>Any Questions?</div>
                <div>Call Us: <span><a href="tel:202-555-0130">202-555-0130</a></span></div>
            </div>
        </aside>
        <nav>
            <ul>
                <li><a href="@Url.Action("Index", "Home")#home">Home</a></li>
                <li><a href="@Url.Action("Index", "Home")#trainers">Trainers</a></li>
                <li><a href="@Url.Action("Index", "Home")#contact">Contact</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    if (ViewBag.isAdmin == true || ViewBag.isTrainer == true)
                    {
                        <li><a href="@Url.Action("Create", "Posts")">Create</a></li>
                    }       
                }
            </ul>
        </nav>
    </aside>
    <section class="s-l animated wow fadeIn" id="home">
        <main>
            <div class="navBar">
                <div class="container">
                    <section class="logo">
                        <a href="">HardSoft</a>
                    </section>
                    <nav class="nav">
                        <ul>
                            <li><a href="@Url.Action("Index", "Home")#home">Home</a></li>
                            <li><a href="@Url.Action("Index", "Home")#trainers">Trainers</a></li>
                            <li><a href="@Url.Action("Index", "Home")#contact">Contact</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (ViewBag.isAdmin == true || ViewBag.isTrainer == true)
                                {
                                    <li><a href="@Url.Action("Create", "Posts")">Create</a></li>
                                }
                                <li class="dropdown">
                                    <a href="#" class="user-avatar" data-toggle="dropdown">
                                        <img class="img-responsive avatar" src="~/Content/Images/UserPhotos/@User.Identity.getAvatar()" alt="User Avatar" />
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a href="@Url.Action("Index", "Manage")">Manage</a></li>
                                        <li>
                                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                                            }
                                        </li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    </nav>
                    <button class="navbar-toggle">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
            </div>
            <section class="section blog">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="new">
                                        @if (Model.Posts.Count > 0)
                                        {
                                            foreach (var item in Model.Posts)
                                            {
                                                <div class="panel">
                                                    <div class="panel-heading">
                                                        <div class="titlenew">
                                                            <h3><a href="@Url.Action("Details", "Posts", new { id = item.Id })">@item.Title</a></h3>
                                                        </div>
                                                    </div>
                                                    <div class="panel-body">
                                                        <div class="head">
                                                            <a href="@Url.Action("Details", "Posts", new { id = item.Id })"><img src="@item.ImageURL" class="img-responsive" alt=""></a>
                                                        </div>
                                                        <div class="content">
                                                            @Html.Raw(item.Content)
                                                            <hr>
                                                        </div>
                                                    </div>
                                                    <div class="panel-footer">
                                                        <div class="meta">
                                                            <div>
                                                                <i class="fa fa-user"></i>
                                                                <span>BY:</span>
                                                                @if (item.Author != null)
                                                                {
                                                                    <a href="">@item.Author.FullName</a>
                                                                }
                                                                else
                                                                {
                                                                    <span>Anonymous</span>
                                                                }
                                                            </div>
                                                            <div>
                                                                <i class="fa fa-calendar"></i>
                                                                <span>@item.Date.ToString("MMMM dd, yyyy")</span>
                                                            </div>
                                                            <div>
                                                                <i class="fa fa-folder-open-o"></i>
                                                                <span>IN:</span>
                                                                <a href="">Wordpress</a>
                                                                <span>, </span>
                                                                <a href="">PHP</a>
                                                            </div>
                                                            <div class="read">
                                                                <a href="@Url.Action("Details", "Posts", new { id = item.Id })">Read More</a>
                                                            </div>
                                                            @if (User.Identity.IsAuthenticated)
                                                            {
                                                                if (ViewBag.isAdmin == true || ViewBag.isTrainer == true)
                                                                {
                                                                    <div class="read">
                                                                        <a href="@Url.Action("Edit", "Posts", new { id = item.Id })">Edit</a>
                                                                    </div>
                                                                }

                                                                if (ViewBag.isAdmin == true)
                                                                {
                                                                    <div class="read">
                                                                        <a href="@Url.Action("Delete", "Posts", new { id = item.Id })">Remove</a>
                                                                    </div>
                                                                }
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        } else
                                        {
                                            <div class="panel">
                                                <div class="panel-heading">No Results</div>
                                            </div>
                                        }

                                        @Html.PagedListPager(Model.Posts, page => Url.Action("Index",
                                        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 sidebar">
                            <div class="search">
                                <div class="panel">
                                    <div class="panel-heading">
                                        <i class="fa fa-search"></i>
                                        <span>Search</span>
                                    </div>
                                    <div class="panel-body">
                                        @using (Html.BeginForm("Index", "Posts", FormMethod.Get))
                                        {
                                            <div class="form-group">
                                                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Search Here" })
                                            </div>
                                                <button type="submit" class="btn btn-default">Search now</button>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="tags">
                                <div class="panel">
                                    <div class="panel-heading">
                                        <i class="fa fa-folder-open-o"></i>
                                        <span>Tags</span>
                                    </div>
                                    <div class="panel-body">
                                        @foreach(var tag in Model.Tags)
                                        {
                                            @Html.ActionLink(tag.TagName, "Index", "Posts", new { searchString = tag.TagName }, null)
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <span>&copy; copyright 2016 - Fitness Centre HardSoft</span>
                    </div>
                </div>
            </div>
        </footer>
    </section>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/blog")
</body>
</html>
