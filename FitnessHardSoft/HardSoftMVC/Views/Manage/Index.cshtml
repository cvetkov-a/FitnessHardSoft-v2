@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/login")
    @Scripts.Render("~/bundles/modernizr")

</head>
@model HardSoftMVC.Models.IndexViewModel

<body>
    <section class="login">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <div class="panel login">
                                <div class="panel-heading">
                                    Manage your account
                                </div>
                                <div class="panel-body">
                                    <div class="input-group">
                                        @if (Model.HasPassword)
                                        {
                                            @Html.ActionLink("Change your password", "ChangePassword")
                                        }
                                        else
                                        {
                                            @Html.ActionLink("Create", "SetPassword")
                                        }
                                        @if (Model.HasCard.Count > 0)
                                        {
                                            <hr /><span><b>You have purchased:</b></span><br />
                                            foreach (var c in Model.HasCard)
                                            {
                                                <span>@c.CardName card expiring on @c.ExpirationDate</span><br />
                                            }
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>