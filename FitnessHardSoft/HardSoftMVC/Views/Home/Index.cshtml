@{
    ViewBag.Title = "HardSoft";
}

@model IEnumerable<HardSoftMVC.Models.CookMeIndexViewModel>
<aside class="sideBar">
    <header>
        <span class="glyphicon glyphicon-remove navbartogg"></span>
    </header>
    <main>
        <div class="time">
            <div>Any Questions?</div>
            <div>Call Us: <span><a href="tel:202-555-0130">202-555-0130</a></span></div>
        </div>
    </main>
    <nav>
        <ul>
            <li><a href="#home">Home</a></li>
            <li><a href="#trainers">Trainers</a></li>
            <li><a href="">Pages</a></li>
            <li><a href="#blog">Blog</a></li>
            <li><a href="#contact">Contact</a></li>
        </ul>
    </nav>
</aside>
<section class="s-l animated wow fadeIn" id="home">
    <header>
        <div class="barSocial">
            <div class="container">
                <nav class="social">
                    <ul>
                        <li><a class="facebook" href=""><i class="fa fa-facebook"></i></a></li>
                        <li><a class="twitter" href=""><i class="fa fa-twitter"></i></a></li>
                        <li><a class="linkedin" href=""><i class="fa fa-linkedin"></i></a></li>
                        <li><a class="vimeo" href=""><i class="fa fa-vimeo"></i></a></li>
                        <li><a class="pinterest" href=""><i class="fa fa-pinterest-p"></i></a></li>
                        <li><a class="instagram" href=""><i class="fa fa-instagram"></i></a></li>
                        <li><a class="googlep" href=""><i class="fa fa-google-plus"></i></a></li>
                        <li><a class="youtube" href=""><i class="fa fa-youtube"></i></a></li>
                    </ul>
                </nav>
                <p class="time">Any Questions? Call Us: <span><a href="tel:202-555-0130">202-555-0130</a></span></p>
                <div class="cls">
                    <i class="fa fa-times"></i>
                </div>
            </div>
        </div>
    </header>
    <main>
        <section class="slider home img-responsive">
            <div class="content">
                <h3 class="wow bounceIn" data-wow-delay="0.4s">HardSoft - It's right now or never</h3>
                @if (!Request.IsAuthenticated)
                {
                    <p class="wow fadeIn" data-wow-delay="0.5s">You’re Tired, I’m Tired. You’re feeling down, me too. Does it make us weak? No, it makes us human. It’s never going to be the perfect time to start.<strong> Start now</strong>. Nobody will do it for you.</p>
                    <a class="btn wow pulse" href="@Url.Action("Login", "Account")" data-wow-delay="0.7s">Start now</a>
                }
                else
                {
                    <p class="wow fadeIn" data-wow-delay="0.5s">Hey, no one ever said getting an awesome, healthy body was easy—that's why the word work is in working out.</p>
                }
            </div>
            <div class="navBar">
                <div class="container">
                    <section class="logo">
                        <a href="">HardSoft</a>
                    </section>
                    <nav class="nav">
                        <ul>
                            <li><a href="#home">Home</a></li>
                            <li><a href="#trainers">Trainers</a></li>
                            @using Microsoft.AspNet.Identity
                            @if (Request.IsAuthenticated)
                            {
                                using (Html.BeginForm("LogOff", "Account", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    if (Request.IsAuthenticated)
                                    {
                                <li>
                                    <a href="" data-toggle="dropdown">User</a>
                                    <ul class="dropdown-menu">
                                        <li><a href="@Url.Action("Index", "Manage")">Manage</a></li>
                                        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                                    </ul>
                                </li>
                                    }
                                }
                            }
                            <li><a href="#blog">Blog</a></li>
                            <li><a href="#contact">Contact</a></li>
                        </ul>
                    </nav>
                    <button class="navbar-toggle">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
            </div>
        </section>
        <section id="trainers" class="section">
            <div class="container">
                <div class="row trainers">
                    @foreach (var trainer in Model)
                    {
                        foreach (var item in trainer.Trainers)
                        {
                            <div class="col-md-3 col-sm-6">
                                <div class="panel panel-default wow bounceIn" data-wow-delay="0.5s">
                                    <div class="panel-heading">
                                        <img src="@item.ImageURL" class="img-responsive" alt="">
                                    </div>
                                    <div class="panel-body">
                                        <div class="name">@item.Name</div>
                                        <p>@item.Information</p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </section>
        <section id="blog" class="section">
            <div class="container">
                <div class="row">
                    @foreach (var post in Model)
                    {
                        foreach (var item in post.Posts)
                        {
                            <div class="col-md-4 col-sm-8">
                                <div class="box wow fadeIn" data-wow-delay="0.1s">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="img">
                                                <a href="@Url.Action("Details", "Posts", new { id = item.Id })">
                                                    <img src="@item.ImageURL" class="img-responsive" alt="">
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-md-9">
                                            <div class="content">
                                                <h5 class="title">
                                                    <a href="@Url.Action("Details", "Posts", new { id = item.Id })">@item.Title</a>
                                                </h5>
                                                <p>@item.Content</p>
                                                @if (item.Author != null)
                                                {
                                                    <p class="postedBy">
                                                        by
                                                        <a href="">@item.Author.FullName (@item.Author.UserName)</a>
                                                    </p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <a href="@Url.Action("Index", "Posts")" class="btn wow wobble" data-wow-delay="1.1s">Read more</a>
                    </div>
                </div>
            </div>
        </section>
        <section id="contact" class="section">
            <div class="container">
                <div class="row cn">
                    <form method="post">
                        <div class="col-md-6">
                            <div class="form-group wow rollIn" data-wow-delay="0.1s">
                                <input type="text" name="name" class="form-control" placeholder="Name">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group wow rollIn" data-wow-delay="0.1s">
                                <input type="email" name="email" class="form-control" placeholder="Email">
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group wow rollIn" data-wow-delay="0.7s">
                                        <input type="text" name="subject" class="form-control" placeholder="Subject">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group wow rollIn" data-wow-delay="1s">
                                        <textarea name="question" id="" cols="30" class="form-control" placeholder="Message" rows="10"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="container">
                            <input type="submit" class="btn wow bounceIn" value="Send" data-wow-delay="2s">
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
</section>
<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <span>&copy; copyright 2016 - Fitness Centre HardSoft</span>
            </div>
        </div>
    </div>
</footer>