@{
    ViewBag.Title = "Home Page";
}
@model FitnessHardSoft.Models.wholeInfo
<section id="trainers" class="section">
    <div class="container">
        <div class="row trainers">
            <div>
                @foreach (var name in Model.Trainers)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <img src="~/assets/images/trainers/@name.PictureLink" class="img-responsive" alt="">
                            </div>

                            <div class="panel-body">
                                <div class="name">@name.FirstName @name.LastName</div>
                                <p>@name.About</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                @Html.ActionLink("See the whole crew", "Home", "Home", null, new { @class = "btn" })
            </div>
        </div>
    </div>
</section>
<section id="blog" class="section">
    <div class="container">
        <div class="row">
            @foreach (var news in Model.Posts)
            {
                <div class="col-md-4">
                    <div class="box">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="img">
                                    <a href="">
                                        <img src="~/Images/news/@news.PicLink" class="img-responsive" alt="">
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="content">
                                    <h5 class="title">
                                        <a href="">@news.Title</a>
                                    </h5>
                                    <p>@news.Body</p>
                                    <p class="postedBy">
                                        <a href="">
                                            @if (news.Author != null)
                                            {
                                                @:by <i>@news.Author.UserName</i>
                                                    }
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="row">
            <div class="col-lg-12">
                @Html.ActionLink("Read more", "Index", "Posts", null, new { @class = "btn" })
            </div>
        </div>
    </div>
</section>

    </main>
  </section>